  "compilerOptions": {
    "rootDir": "..",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../core/src/*"],
      "@/*": ["../ui-vue/src/*"]
    },
    "types": ["vite/client", "node"],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
